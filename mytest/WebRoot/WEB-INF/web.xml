<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
	http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
	
	<display-name>MyTest Project v1.0</display-name>
	
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
	
	<!-- Parm Configuration -->
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>classpath:application-*.xml</param-value>
	</context-param>
	<context-param>
		<description>
			如果不定义webAppRootKey参数，那么webAppRootKey就是缺省的"webapp.root"
		</description>
		<param-name>webAppRootKey</param-name>
		<param-value>mytest.root</param-value>
	</context-param>
	
	<message-destination>
		<description>
			国际化配置(Internationalization),也可配置到spring的context中，
			通过spring标签调	用，具体见spring的配置
		</description>
		<message-destination-name>classpath:i18n/mytest_i18n</message-destination-name>
	</message-destination>
	
	<resource-ref>
		<description>DB Connection,jndi数据源</description>
		<res-ref-name>jdbc/mytest</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
	</resource-ref>

	<listener>
		<description>spring listener</description>
		<display-name>listener</display-name>
		<listener-class>
			org.springframework.web.context.ContextLoaderListener
		</listener-class>
	</listener>
	
	<!-- Servlet and Servlet Mapping Configuration -->
	<servlet>
		<servlet-name>mytestapp</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>mytestapp</servlet-name>
		<url-pattern>*.action</url-pattern>
	</servlet-mapping>
	
	<error-page>
			<error-code>404</error-code>
			<location>/404.jsp</location>
		</error-page>	
		<error-page>
			<error-code>408</error-code>
			<location>/404.jsp</location>
		</error-page>		
		<error-page>
			<error-code>503</error-code>
			<location>/503.jsp</location>
		</error-page>	
	
		<error-page>
			<error-code>500</error-code>
			<location>/common/permError.jsp?error=500</location>
		</error-page>

</web-app>
